@model IEnumerable<proyectoFinal1.Models.producto>

@{
    ViewBag.Title = "Index";
}
<center>
    <h2>Productos</h2>
</center>


<p>
   <a class="btn btn-primary" href="   http://localhost:49909/productoes/Create">Crear Nuevo</a> 
</p>

<table class="table">
    <tr class="titulos">
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bodega1.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bodega1.nombre)
        </td>
        <td class="titulo2">
            @Html.ActionLink("Editar", "Edit", new { id=item.id }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Detalles", "Details", new { id=item.id }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
